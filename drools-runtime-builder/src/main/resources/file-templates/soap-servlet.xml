<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

  <import resource="classpath:META-INF/cxf/cxf.xml"/>
  <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
  <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>


  <jaxws:endpoint
      id="ruleRunner"
      xmlns:service="#targetNamespace#"
      serviceName="service:#wsdlServiceName#"
      implementor="#executionService"
      address="/ruleEngineService"/>

  <bean id="calculateService" class="loyalty.service.ServiceCalculate">
    <property name="ruleBasePackage" ref="platformRunner"/>
  </bean>
  <!-- JAX-WS Service Endpoint -->


</beans>